  "dependencies": {
    "firebase": "^12.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-firebaseui": "^6.0.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.7.1"
